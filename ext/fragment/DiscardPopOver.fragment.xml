<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	xmlns="sap.m">
	<Popover id="DiscardDraftPopover" placement="Top" showHeader="false" class="sapUiContentPadding sapUiSizeCompact">
		<VBox id="DiscardDraftBox" alignItems="Stretch" alignContent="Stretch">
			<Text id="DiscardDraftText" text="{@i18n>DiscardText}" wrapping="true"/>
			<Button id="DiscardDraftConfirmButton" text="{@i18n>Discard}" press="onDiscardPress" width="100%"/>
		</VBox>
	</Popover>
</core:FragmentDefinition>